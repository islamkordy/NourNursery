<body>
    <!-- start nav -->
    <nav>
        <div class="container">
            <div class="nav">
                <div class="logo">
                    <img src="~/@(Model.Logo)" alt="">
                </div>

                <div class="links">
                    <ul>
                        <li><a href="~/">HOME</a></li>
                        <li><a href="">WHO WE ARE</a></li>
                        <li><a href="~/Home/Product">PROJECTS</a></li>
                        <li><a href="">PRODUCTS</a></li>
                        <li><a href="">CONTACT US</a></li>

                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <!-- end nav -->
    <div class="responsive-nav">
        <div class="i-logo">
            <img src="~/@(Model.Logo)" alt="">
        </div>
        <div class="bar">
            <i class="fas fa-bars"></i>
        </div>
    </div>
    <!-- start header -->

    <header>
        <!-- Swiper -->
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
                @foreach (var item in Model.Sliders1)
                {
                    <div class="swiper-slide">
                        <div class="img-h">
                            <img class="img-fluid" src="~/@(item.Image)" alt="">
                            <div class="head-info">
                                @(ResourcesReader.IsArabic? Html.Raw(item.DescAr): Html.Raw(item.DescEn))
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="swiper-pagination"></div>
        </div>
        <!-- Swiper-->
    </header>
    <!-- end header -->
    <!-- start welcome -->
    <div class="welcome">
        <div class="container">
            <div class="w-title">
                @Html.Raw(Model.Title)
            </div>
            <div class="t-paragraph">
                @Html.Raw(Model.Description)
            </div>
            <div class="row">
                <div class="col-12 col-md-12 col-lg-4">
                    <div class="wel_info">
                        <h6>@BasicInputRes.VALUE</h6>
                        @Html.Raw(Model.Value)
                    </div>
                </div>
                <div class="col-12 col-md-12 col-lg-4">
                    <div class="wel_info">
                        <h6>@BasicInputRes.Vision</h6>
                        @Html.Raw(Model.Vision)
                    </div>
                </div>
                <div class="col-12 col-md-12 col-lg-4">
                    <div class="wel_info">
                        <h6>@BasicInputRes.Mission</h6>
                        @Html.Raw(Model.Mission)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end welcome -->
    <!-- start to-slider -->
    <div class="to-slider">
        <!-- Swiper -->
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
                @foreach (var item in Model.Sliders2)
                {
                    <div class="swiper-slide">
                        <div class="img-h">
                            <img class="img-fluid" src="~/@(item.Image)" alt="">
                        </div>
                        <div class="to-info">
                            @(ResourcesReader.IsArabic? Html.Raw(item.DescAr): Html.Raw(item.DescEn))
                        </div>
                    </div>

                }

            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
    <!-- start to-slider -->
    <!-- start grid item -->
    <div class="item-grid">
        @if (Model.Products.Count() > 0)
        {
            <div class="item-g-l ti">
                <img src="~/@(Model.Products.ElementAt(0).Image1)" alt="">
                <div class="po-lay">
                    <div class="po-lay-text">
                        @(ResourcesReader.IsArabic? Html.Raw(Model.Products.ElementAt(0).TitleAr): Html.Raw(Model.Products.ElementAt(0).TitleEn))
                        @*<h3> don't think about work in your  <span>bedroom </span></h3>
                        <h3>or relaxation area.</h3>*@
                    </div>
                    @*<h6>@(ResourcesReader.IsArabic? Model.Products.ElementAt(0).Category.NameAr: Model.Products.ElementAt(0).Category.NameEn)</h6>*@
                </div>
            </div>
        }

    <div class="item-g-r">
        <div class="igr-top">
            @if (Model.Products.Count() > 1)
            {
                for (int i = 1; i < Model.Products.Count(); i++)
                {
                    <div class="igr-top1 ti">
                        <img src="~/@(Model.Products.ElementAt(i).Image1)" alt="">
                        <div class="po-lay">
                            <span></span>
                            <h6>@(ResourcesReader.IsArabic? Model.Products.ElementAt(i).Category.NameAr: Model.Products.ElementAt(i).Category.NameEn)</h6>
                        </div>

                    </div>
                    @if (i == 2)
                        break;
                }
            }
        </div>
        @if (Model.Products.Count() > 3)
        {
            <div class="igr-buttom ti">
                <img src="~/@(Model.Products.ElementAt(3).Image1)" alt="">
                <div class="po-lay">
                    <div class="po-lay-text">
                        @(ResourcesReader.IsArabic? Html.Raw(Model.Products.ElementAt(3).TitleAr): Html.Raw(Model.Products.ElementAt(3).TitleEn))
                    </div>
                    <h6>@(ResourcesReader.IsArabic? Model.Products.ElementAt(3).Category.NameAr: Model.Products.ElementAt(3).Category.NameEn)</h6>
                </div>
            </div>
        }


    </div>
    </div>
    <!-- end grid item -->
    <!-- slider projects -->
    <div class="slide-projects">
        <!-- Swiper -->
        <div class="swiper mySwiper1">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <div class="item-pro">
                        <img class="img-fluid" src="~/@(Model.VisionImage)" alt="">
                        <div class="lay-pro">
                            <h4>@BasicInputRes.PROJECTS</h4>
                            <div class="lp-text">
                                @Html.Raw(Model.ProjectTitle)
