                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="item-pro">
                        <img class="img-fluid" src="~/@(Model.VisionImage)" alt="">
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- slider projects -->
    <!-- item gal-->
    <div class="item_gal">
        @foreach (var item in Model.MainProducts)
        {
        <div class="gal">
            <img class="img-fluid" src="~/@(item.Image1)" alt="">
            @(ResourcesReader.IsArabic? Html.Raw(item.TitleAr): Html.Raw(item.TitleEn))
        </div>
        }
    </div>
    <!-- item gal-->
    <!-- contact us -->
    <div class="contact-us">
        <div class="title">
            <h6>@BasicInputRes.ContactUs</h6>
        </div>
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-12 col-md-12 col-lg-5">
                    <div class="form-contact">
                        <div class="input-form">
                            <input type="text" placeholder="NAME">
                        </div>
                        <div class="input-form">
                            <input type="text" placeholder="MOBILE">
                        </div>
                        <div class="input-form">

                            <textarea placeholder="MESSAGE" name="" id="" cols="30" rows="10"></textarea>
                        </div>
                        <div class="sub-m">
                            <button>SEND</button>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-12 col-lg-5">
                    <div class="contact-info">
                        @Html.Raw(Model.Contact)
                        <ul>
                            <li><a href="@Model.Instagram"><i class="fab fa-instagram"></i></a></li>
                            <li><a href="@Model.Twitter"><i class="fab fa-twitter"></i></a></li>
                            <li><a href="@Model.FaceBook"><i class="fab fa-facebook-f"></i></a></li>
                            <li><a href="@Model.Linkedin"><i class="fab fa-linkedin-in"></i></a></li>
                            <li><a href="@Model.Youtube"><i class="fab fa-youtube"></i></a></li>
