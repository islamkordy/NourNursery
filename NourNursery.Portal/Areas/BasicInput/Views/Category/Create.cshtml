@model Models.ViewModel.BasicInput.CategoryVm

<form asp-action="Create" asp-controller="Category" method="post" id="ModelForm">
    @Html.AntiForgeryToken()


    <div class=" bs-example-modal-lg modal-dialog modal-lg" tabindex="-1">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal">&times;</button>*@
                <h4 class="modal-title">@GlobalRes.Categories</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-6">
                        <input asp-for="Id" hidden />

                        <label asp-for="NameAr" class="control-label"></label>
                        <input asp-for="NameAr" class="form-control" />




                    </div>
                    <div class="col-6">
                        <label asp-for="NameEn" class="control-label"></label>
                        <input asp-for="NameEn" class="form-control" />

                    </div>


                </div>

            </div>
            <div class="modal-footer justify-content-end">
                <button type="button" class="btn btn-danger" data-dismiss="modal">@GlobalRes.btnCancel</button>
                <button type="button" class="btn btn-primary " onclick="Save()">@GlobalRes.btnSave</button>

            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</form>


