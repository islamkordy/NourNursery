@model Models.ViewModel.BasicInput.FaqsVm

    <script src="~/js/ckeditor/ckeditor.js"></script>
    <script src="~/js/ckeditor/build-config.js"></script>
    <script src="~/js/ckeditor/styles.js"></script>
    <script src="~/js/ckeditor/config.js"></script>

    <form asp-action="Create" asp-controller="Faqs" method="post" id="ModelForm">
        @Html.AntiForgeryToken()


        <div class=" bs-example-modal-lg modal-dialog modal-lg" tabindex="-1">
            <div class="modal-content">
                <div class="modal-header">
                    @*<button type="button" class="close" data-dismiss="modal">&times;</button>*@
                    <h4 class="modal-title">@GlobalRes.Faqs</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-6">
                            <input asp-for="Id" hidden />

                            <label asp-for="TitleAr" class="control-label"></label>
                            <textarea asp-for="TitleAr" class="form-control"></textarea>




                        </div>
                        <div class="col-6">
                            <label asp-for="TitleEn" class="control-label"></label>
                            <textarea asp-for="TitleEn" class="form-control"></textarea>

                        </div>


                    </div>



                    <div class="row">
                        <div class="col-12 ">
                            <input asp-for="DetailId" hidden />

                            <label asp-for="QuestionAr" class="control-label"></label>
                            <textarea asp-for="QuestionAr" class="form-control"></textarea>

                        </div>


                        <div class="col-12 ">
                            <label asp-for="QuestionEn" class="control-label"></label>
                            <textarea asp-for="QuestionEn" class="form-control"></textarea>

                        </div>
                        <div class="col-12 ">
                            <label asp-for="DescAr" class="control-label"></label>
                            <textarea asp-for="DescAr" class="form-control"></textarea>

                        </div>
                        <div class="col-12 ">
                            <label asp-for="DescEn" class="control-label"></label>
                            <textarea asp-for="DescEn" class="form-control"></textarea>

                        </div>
                        <div class="modal-footer justify-content-end" style="text-align:left">
                            <button type="button" class="btn btn-outline-dark " onclick="AddFeature()">@GlobalRes.btnAdd</button>

                        </div>
                    </div>
                    <table id="FeatureTB" class="table table-bordered table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>@BasicInputRes.QuestionAr</th>
                                <th>@BasicInputRes.QuestionEn</th>
                                <th>@BasicInputRes.DescAr</th>
                                <th>@BasicInputRes.DescEn</th>
                                <th>@GlobalRes.btnDelete</th>
                                <th>@GlobalRes.btnEdit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.FaqsDetails != null)
                            {
                                @foreach (var item in Model.FaqsDetails)
                                {
                                    <tr>
                                        <td style="display:none">@item.Id</td>
                                        <td>@item.QuestionAr</td>
                                        <td>@item.QuestionEn</td>
                                        <td>@item.DescAr</td>
                                        <td>@item.DescEn</td>
                                        <td>
                                            <a class="" onclick="RemoveFeature(this);" style="color:red">
                                                <i class=" fa fa-trash"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a class="" onclick="EditFeature(this);">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer justify-content-end">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">@GlobalRes.btnCancel</button>
                    <button type="button" class="btn btn-primary " onclick="Save()">@GlobalRes.btnSave</button>

                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </form>

    <script type="text/javascript">
        CKEDITOR.replace('DescAr');
        CKEDITOR.replace('DescEn');
        CKEDITOR.replace('QuestionEn');
        CKEDITOR.replace('QuestionAr');
        CKEDITOR.replace('TitleAr');
        CKEDITOR.replace('TitleEn');
                //$(document).ready(function () {
                //    manageAbout.init();

                //})



    </script>
